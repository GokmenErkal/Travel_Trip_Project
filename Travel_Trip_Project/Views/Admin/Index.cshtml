@using Travel_Trip_Project.Models.Siniflar
@model List<Blog>
    
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Tur Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Blog/BlogDetay/@x.ID" class="btn btn-info">Detaylar</a></td>
        </tr>
    }
</table>
<a style="margin-bottom:20px" href="/Admin/YeniBlog/" class="btn btn-primary">Yeni Tur Ekle</a>

